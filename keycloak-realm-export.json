{
  "realm": "ecommerce-realm",
  "displayName": "E-Commerce Platform",
  "enabled": true,
  "loginTheme": "ecommerce",
  "sslRequired": "external",
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 30,
  "roles": {
    "realm": [
      {
        "name": "customer",
        "description": "Default role for customers",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "admin",
        "description": "Administrator role with full access",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "manager",
        "description": "Store manager role",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "support",
        "description": "Customer support role",
        "composite": false,
        "clientRole": false
      }
    ]
  },
  "defaultRoles": ["customer"],
  "clients": [
    {
      "clientId": "ecommerce-frontend",
      "name": "E-Commerce Frontend",
      "description": "Angular frontend application",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": ["http://localhost:4200/*"],
      "webOrigins": ["http://localhost:4200"],
      "publicClient": true,
      "frontchannelLogout": true,
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "nodeReRegistrationTimeout": -1,
      "defaultClientScopes": [
        "web-origins",
        "role_list",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "ecommerce-backend",
      "name": "E-Commerce Backend Services",
      "description": "Backend microservices client",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "backend-secret-key",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "nodeReRegistrationTimeout": -1,
      "defaultClientScopes": [
        "web-origins",
        "role_list",
        "profile",
        "roles",
        "email"
      ]
    }
  ],
  "users": [
    {
      "username": "admin@ecommerce.com",
      "email": "admin@ecommerce.com",
      "firstName": "Admin",
      "lastName": "User",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
