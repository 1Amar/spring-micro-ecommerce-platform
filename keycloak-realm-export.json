        "department": ["IT"],
        "employee_id": ["ADM001"]
      }
    },
    {
      "username": "customer@ecommerce.com",
      "email": "customer@ecommerce.com",
      "firstName": "John",
      "lastName": "Customer",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "customer123",
          "temporary": false
        }
      ],
      "realmRoles": ["customer"],
      "attributes": {
        "phone": ["+1-555-0123"],
        "customer_level": ["premium"]
      }
    },
    {
      "username": "manager@ecommerce.com",
      "email": "manager@ecommerce.com",
      "firstName": "Store",
      "lastName": "Manager",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "manager123",
