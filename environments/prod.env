# Production Environment Configuration
# Database Configuration
DATABASE_URL=jdbc:postgresql://prod-postgres-cluster:5432/microservices_ecom_prod
DATABASE_USERNAME=ecom_prod_user
DATABASE_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD_2024

# Redis Configuration
REDIS_HOST=prod-redis-cluster
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PRODUCTION_PASSWORD

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=prod-kafka-1:9092,prod-kafka-2:9092,prod-kafka-3:9092

# Eureka Configuration
EUREKA_CLIENT_SERVICE_URL=http://prod-eureka-1:8761/eureka/,http://prod-eureka-2:8761/eureka/

# Elasticsearch Configuration
ELASTICSEARCH_URIS=http://prod-es-1:9200,http://prod-es-2:9200,http://prod-es-3:9200
ELASTICSEARCH_CONNECTION_TIMEOUT=60s
ELASTICSEARCH_SOCKET_TIMEOUT=60s

# Service URLs (Internal Service Discovery)
PRODUCT_SERVICE_URL=http://product-service
INVENTORY_SERVICE_URL=http://inventory-service
CART_SERVICE_URL=http://cart-service
ORDER_SERVICE_URL=http://ecom-order-service
USER_SERVICE_URL=http://user-service
PAYMENT_SERVICE_URL=http://payment-service
NOTIFICATION_SERVICE_URL=http://notification-service

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://prod-jaeger-collector:4318

# Keycloak Configuration
KEYCLOAK_ISSUER_URI=https://auth.company.com/realms/ecommerce-realm
KEYCLOAK_AUTH_SERVER_URL=https://auth.company.com
KEYCLOAK_JWK_SET_URI=https://auth.company.com/realms/ecommerce-realm/protocol/openid-connect/certs
KEYCLOAK_CLIENT_SECRET=CHANGE_ME_PRODUCTION_CLIENT_SECRET

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://ecommerce.company.com,https://admin.company.com

# Angular Frontend Configuration
# Note: Angular uses build-time environment replacement, not runtime env vars
# See ecommerce-frontend/src/environments/ for Angular configuration

# Application Specific
APP_USER_REGISTRATION_REQUIRE_EMAIL_VERIFICATION=true
APP_USER_REGISTRATION_AUTO_CREATE_PROFILE=false

# JWT Configuration
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_COMPLEX_KEY_2024
JWT_EXPIRATION=3600000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=20
CIRCUIT_BREAKER_SLOW_CALL_RATE_THRESHOLD=50
CIRCUIT_BREAKER_WAIT_DURATION_IN_OPEN_STATE=15000

# Cache Configuration
SPRING_CLOUD_LOADBALANCER_CACHE_ENABLED=true

# Rate Limiting Configuration (API Gateway)
RATE_LIMIT_REPLENISH_RATE=50
RATE_LIMIT_BURST_CAPACITY=100
RATE_LIMIT_REQUESTED_TOKENS=1

# Performance Configuration (Production Optimized)
HIKARI_MAXIMUM_POOL_SIZE=50
HIKARI_MINIMUM_IDLE=25
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1200000

# Logging Level (Production)
LOGGING_LEVEL_COM_AMAR=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=WARN
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=WARN
LOGGING_LEVEL_ORG_HIBERNATE_SQL=WARN

# Production Security
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized

# Email Configuration (Production)
SPRING_MAIL_HOST=smtp.company.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=noreply@company.com
SPRING_MAIL_PASSWORD=CHANGE_ME_EMAIL_PASSWORD

# SSL Configuration
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=classpath:keystore.p12
SERVER_SSL_KEY_STORE_PASSWORD=CHANGE_ME_KEYSTORE_PASSWORD
SERVER_SSL_KEY_STORE_TYPE=PKCS12