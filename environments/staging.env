# Staging Environment Configuration
# Database Configuration
DATABASE_URL=jdbc:postgresql://staging-postgres:5432/microservices_ecom_staging
DATABASE_USERNAME=ecom_staging_user
DATABASE_PASSWORD=staging_secure_password_2024

# Redis Configuration
REDIS_HOST=staging-redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=staging-kafka:9092

# Eureka Configuration
EUREKA_CLIENT_SERVICE_URL=http://staging-eureka:8761/eureka/

# Elasticsearch Configuration
ELASTICSEARCH_URIS=http://staging-elasticsearch:9200
ELASTICSEARCH_CONNECTION_TIMEOUT=30s
ELASTICSEARCH_SOCKET_TIMEOUT=30s

# Service URLs (Internal Service Discovery)
PRODUCT_SERVICE_URL=http://product-service
INVENTORY_SERVICE_URL=http://inventory-service
CART_SERVICE_URL=http://cart-service
ORDER_SERVICE_URL=http://ecom-order-service
USER_SERVICE_URL=http://user-service
PAYMENT_SERVICE_URL=http://payment-service
NOTIFICATION_SERVICE_URL=http://notification-service

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://staging-jaeger:4318

# Keycloak Configuration
KEYCLOAK_ISSUER_URI=http://staging-keycloak:8080/realms/ecommerce-realm
KEYCLOAK_AUTH_SERVER_URL=http://staging-keycloak:8080
KEYCLOAK_JWK_SET_URI=http://staging-keycloak:8080/realms/ecommerce-realm/protocol/openid-connect/certs
KEYCLOAK_CLIENT_SECRET=staging-client-secret-2024

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging-ecommerce.company.com,https://staging-admin.company.com

# Angular Frontend Configuration
# Note: Angular uses build-time environment replacement, not runtime env vars
# See ecommerce-frontend/src/environments/ for Angular configuration

# Application Specific
APP_USER_REGISTRATION_REQUIRE_EMAIL_VERIFICATION=true
APP_USER_REGISTRATION_AUTO_CREATE_PROFILE=true

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key-complex-2024
JWT_EXPIRATION=86400000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=30
CIRCUIT_BREAKER_SLOW_CALL_RATE_THRESHOLD=80
CIRCUIT_BREAKER_WAIT_DURATION_IN_OPEN_STATE=30000

# Cache Configuration
SPRING_CLOUD_LOADBALANCER_CACHE_ENABLED=true

# Rate Limiting Configuration (API Gateway)
RATE_LIMIT_REPLENISH_RATE=20
RATE_LIMIT_BURST_CAPACITY=40
RATE_LIMIT_REQUESTED_TOKENS=1

# Performance Configuration
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_MINIMUM_IDLE=10
HIKARI_CONNECTION_TIMEOUT=30000

# Logging Level
LOGGING_LEVEL_COM_AMAR=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=WARN