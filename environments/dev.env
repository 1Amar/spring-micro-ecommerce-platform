# Development Environment Configuration
# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/microservices_ecom
DATABASE_USERNAME=ecom_user
DATABASE_PASSWORD=ecom_pass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Eureka Configuration
EUREKA_CLIENT_SERVICE_URL=http://localhost:8761/eureka/

# Elasticsearch Configuration
ELASTICSEARCH_URIS=http://localhost:9200
ELASTICSEARCH_CONNECTION_TIMEOUT=30s
ELASTICSEARCH_SOCKET_TIMEOUT=30s

# Service URLs
PRODUCT_SERVICE_URL=http://product-service
INVENTORY_SERVICE_URL=http://inventory-service
CART_SERVICE_URL=http://cart-service
ORDER_SERVICE_URL=http://ecom-order-service
USER_SERVICE_URL=http://user-service
PAYMENT_SERVICE_URL=http://payment-service
NOTIFICATION_SERVICE_URL=http://notification-service

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Keycloak Configuration
KEYCLOAK_ISSUER_URI=http://localhost:8080/realms/ecommerce-realm
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8080
KEYCLOAK_JWK_SET_URI=http://localhost:8080/realms/ecommerce-realm/protocol/openid-connect/certs
KEYCLOAK_CLIENT_SECRET=backend-secret-key

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8080

# Angular Frontend Configuration
# Note: Angular uses build-time environment replacement, not runtime env vars
# See ecommerce-frontend/src/environments/ for Angular configuration

# Application Specific
APP_USER_REGISTRATION_REQUIRE_EMAIL_VERIFICATION=true
APP_USER_REGISTRATION_AUTO_CREATE_PROFILE=true

# JWT Configuration (if needed)
JWT_SECRET=dev-secret-key-not-for-production
JWT_EXPIRATION=86400000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=50
CIRCUIT_BREAKER_SLOW_CALL_RATE_THRESHOLD=100
CIRCUIT_BREAKER_WAIT_DURATION_IN_OPEN_STATE=60000

# Cache Configuration
SPRING_CLOUD_LOADBALANCER_CACHE_ENABLED=false

# Rate Limiting Configuration (API Gateway)
RATE_LIMIT_REPLENISH_RATE=10
RATE_LIMIT_BURST_CAPACITY=20
RATE_LIMIT_REQUESTED_TOKENS=1